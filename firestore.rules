
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for configuration and posts
    match /config/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
  }
}
